# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{.babelrc,.stylelintrc,jest.config,.eslintrc,.prettierrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=4

[{jshint.json,*.jshintrc}]
indent_style=space
indent_size=4

[{*.jscs.json,*.jscsrc}]
indent_style=space
indent_size=4

[*.js.map]
indent_style=space
indent_size=4

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=4
