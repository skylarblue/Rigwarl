<!--components/playlist/playlist.wxml-->
<view>
    <swiper
            indicator-dots="{{indicatorDots}}"
            autoplay="{{autoplay}}"
            interval="{{interval}}"
            duration="{{duration}}"
            circular="{{circular}}"
    >
        <block wx:for="{{ImageUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image" mode="widthFix"/>
            </swiper-item>
        </block>
    </swiper>
</view>
