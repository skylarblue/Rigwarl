<scroll-view class="lyric-scroll {{ isLyricShow ? 'animation-fade' : ''}}}" scroll-y scroll-top="{{scrollTop}}" scroll-with-animation="true">
    <view class="lyric-panel">
        <block wx:for="{{lrcList}}" wx:key="item">
            <view class="lyric {{index === nowLyricIndex ? 'hightlight-lyric' : ''}}">{{item}}</view>
        </block>
    </view>
</scroll-view>
